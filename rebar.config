{erl_opts, [
    {parse_transform, lager_transform},
    {lager_truncation_size, 4096},

    bin_opt_info,

    warn_unused_vars,
    warn_export_all,
    warn_shadow_vars,
    warn_unused_import,
    warn_unused_function,
    warn_bif_clash,
    warn_unused_record,
    warn_deprecated_function,
    warn_obsolete_guard,
    strict_validation,
    warn_export_vars,
    warn_exported_vars,
    warn_missing_spec,
    warn_untyped_record
]}.

{deps_dir, "deps"}.
{priv_dir, "priv"}.
{sub_dirs, ["rel"]}.

{deps, [
    {lager, "3.0.1",
        {git, "https://github.com/basho/lager.git", {tag, "3.0.1"}}}
]}.

